// tsconfig.json

{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@navigation/*": ["navigation/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["utils/constants/*"], // Note: Adjusted based on your features structure
      "@helpers/*": ["utils/helpers/*"], // Note: Adjusted based on your features structure
      "@theme/*": ["theme/*"],
      "@i18n/*": ["i18n/*"]
    }
  },
  "include": [
    // ðŸ’¡ Add the files you want TypeScript to process.
    // This ensures all your source code and declaration files are checked.
    "src/**/*"
  ]
}
